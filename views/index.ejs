<div class="author">
    <h1 class="author_heading">Hi, I am Yashwant Jain.</h1>
    <p class="author_body">Backend Developer</p>
</div>

<img src="/img/img-1.jpg" alt="image" class="hero-image" width="981" height="528" />

<section class="articles">
    <h2 class="article_heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %> 
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

</section>